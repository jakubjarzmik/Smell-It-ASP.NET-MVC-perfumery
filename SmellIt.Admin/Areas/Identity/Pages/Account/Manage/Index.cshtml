@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="row">
    <div class="col m12">
        <h5 class="center-align">@ViewData["Title"]</h5>
    </div>
</div>
<div class="row">
    <div class="col m8 offset-m2">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="red-text" role="alert"></div>
            <div class="input-field">
                <input id="Username" asp-for="Username" type="text" class="validate" placeholder="Please choose your username." disabled/>
                <label for="Username" asp-for="Username"></label>
            </div>
            <div class="input-field">
                <input id="PhoneNumber" asp-for="Input.PhoneNumber" type="text" class="validate" placeholder="Please enter your phone number."/>
                <label for="PhoneNumber" asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="red-text"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn waves-effect waves-light">Save</button>
        </form>

        <partial name="_StatusMessage" for="StatusMessage" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}