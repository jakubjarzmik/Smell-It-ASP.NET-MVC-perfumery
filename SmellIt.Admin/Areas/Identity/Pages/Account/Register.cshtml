@page
@model RegisterModel
@{
    ViewData["Title"] = @WebsiteTexts.GetValue("Register");
    Layout = "/Views/Shared/_LayoutIfLoggedOut.cshtml";
}

<div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card-panel login grey darken-3 white-text center">
        <h4>@ViewData["Title"]</h4>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="red-text text-darken-2"></div>
            <div class="input-field">
                <i class="material-icons prefix">email</i>
                <input asp-for="Input.Email" id="Input_Email" type="email" class="validate" />
                <label class="white-text" for="Input_Email">Email</label>
                <span asp-validation-for="Input.Email" class="helper-text" data-error="Invalid Email"></span>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">lock</i>
                <input asp-for="Input.Password" id="Input_Password" type="password" class="validate" />
                <label class="white-text" for="Input_Password">@WebsiteTexts.GetValue("Password")</label>
                <span asp-validation-for="Input.Password" class="helper-text" data-error="Invalid Password"></span>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">lock</i>
                <input asp-for="Input.ConfirmPassword" id="Input_ConfirmPassword" type="password" class="validate" />
                <label class="white-text" for="Input_ConfirmPassword">@WebsiteTexts.GetValue("ConfirmPassword")</label>
                <span asp-validation-for="Input.ConfirmPassword" class="helper-text" data-error="Invalid Password"></span>
            </div>
            <input id="registerSubmit"
                   class="btn btn-large waves-effect"
                   value="@WebsiteTexts.GetValue("Register")"
                   type="submit" />
        </form>
        <div>
            <p>
                <a id="login" asp-page="./Login" class="white-text">@WebsiteTexts.GetValue("AlreadyHaveAnAccount")</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
