@using SmellIt.Application.Dtos

@model BrandDto
@{
    ViewData["Title"] = language.GetValue("Brands");
}
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card grey darken-3 white-text">
                <div class="card-content">
                    <div class="card-title">
                        @language.GetValue("Brands")
                        <a class="btn waves-effect waves-light btn modal-trigger right" href="#modal1"> <i class="material-icons">add</i></a>
                    </div>

                    <table class="striped">
                        <thead>
                            <tr>
                                <th>@language.GetValue("Name")</th>
                                <th style="width: 60%;">@language.GetValue("Description")</th>
                                <th>@language.GetValue("DateCreated")</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@LanguageFromDb.GetValue("Dior")</td>
                                <td>@LanguageFromDb.GetValue("DiorDesc")</td>
                                <td>27.03.2023</td>
                                <td class="right">
                                    <a href="#" class="btn"> <i class="material-icons">edit</i></a>
                                    <a href="#" class="btn"> <i class="material-icons">delete</i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>@LanguageFromDb.GetValue("GiorgioArmani")</td>
                                <td>@LanguageFromDb.GetValue("GiorgioArmaniDesc")</td>
                                <td>27.03.2023</td>
                                <td class="right">
                                    <a href="#" class="btn"> <i class="material-icons">edit</i></a>
                                    <a href="#" class="btn"> <i class="material-icons">delete</i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>@LanguageFromDb.GetValue("PacoRabanne")</td>
                                <td>@LanguageFromDb.GetValue("PacoRabanneDesc")</td>
                                <td>27.03.2023</td>
                                <td class="right">
                                    <a href="#" class="btn"> <i class="material-icons">edit</i></a>
                                    <a href="#" class="btn"> <i class="material-icons">delete</i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-action">
                    <ul class="pagination">
                        <li class="disabled">
                            <a href="#" class="purple-text">
                                <i class="material-icons">chevron_left</i>
                            </a>
                        </li>
                        <li class="active purple lighten-1">
                            <a href="#" class="white-text center">
                                1
                            </a>
                        </li>
                        <li class="waves-effect">
                            <a href="#" class="purple-text">
                                2
                            </a>
                        </li>
                        <li class="waves-effect">
                            <a href="#" class="purple-text">
                                3
                            </a>
                        </li>
                        <li class="waves-effect">
                            <a href="#" class="purple-text">
                                4
                            </a>
                        </li>
                        <li class="waves-effect">
                            <a href="#" class="purple-text">
                                <i class="material-icons">chevron_right</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>@language.GetValue("AddNewBrand")</h4>
        <form action="/Brands" method="post">
            <div class="input-field">
                <label asp-for="NamePL">(PL) @language.GetValue("Name")</label>
                <input type="text" asp-for="NamePL" />
                <span asp-validation-for="NamePL" class="helper-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="NameEN">(EN) @language.GetValue("Name")</label>
                <input type="text" asp-for="NameEN" />
                <span asp-validation-for="NameEN" class="helper-text"></span>

            </div>
            <div class="input-field">
                <label asp-for="DescriptionPL">(PL) @language.GetValue("Description")</label>
                <textarea class="materialize-textarea" asp-for="DescriptionPL"></textarea>
                <span asp-validation-for="DescriptionPL" class="helper-text"></span>
            </div>
            <div class="input-field">
                <label asp-for="DescriptionEN">(EN) @language.GetValue("Description")</label>
                <textarea class="materialize-textarea" asp-for="DescriptionEN"></textarea>
                <span asp-validation-for="DescriptionEN" class="helper-text"></span>
            </div>
            <input type="submit" value="@language.GetValue("Add")" class="modal-close btn right" />
        </form>
    </div>

</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}