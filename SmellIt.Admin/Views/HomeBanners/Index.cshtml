@model HomeBannersViewModel
@{
    ViewData["Title"] = language.GetValue("HomeBanners");
}
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card grey darken-3 white-text">
                <div class="card-content">
                    <div class="card-title">
                        @language.GetValue("HomeBanners")
                        <a class="btn right" href="@Url.Action("Create")"> <i class="material-icons">add</i></a>
                    </div>

                    <table class="striped">
                        <thead>
                            <tr>
                                <th>@language.GetValue("Text") (PL)</th>
                                <th>@language.GetValue("Text") (EN)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 0;
                            }
                            @foreach (var item in Model.HomeBanners!)
                            {
                                <tr>
                                    <td>@(item.TextPL.Length > 50 ? item.TextPL.Substring(0,50) + "..." : item.TextPL)</td>
                                    <td>@(item.TextEN.Length > 50 ? item.TextEN.Substring(0,50) + "..." : item.TextEN)</td>
                                    <td class="right">
                                        <a href="#modal_@index" class="btn modal-trigger"><i class="material-icons">more</i></a>
                                        <div id="modal_@index" class="modal">
                                            <div class="modal-content">
                                                <h4>@item.Key</h4>
                                                <img src="#"/>
                                                <h5>@language.GetValue("ImagePath") (PL)</h5>
                                                <p>@item.ImagePath</p>
                                                <h5>@language.GetValue("ImageAlt") (PL)</h5>
                                                <p>@item.ImageAlt</p>
                                                <h5>@language.GetValue("Text") (PL)</h5>
                                                <p>@item.TextPL</p>
                                                <h5>@language.GetValue("Text") (EN)</h5>
                                                <p>@item.TextEN</p>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="#!" class="modal-close btn">@language.GetValue("Close")</a>
                                            </div>
                                        </div>
                                        <a asp-controller="HomeBanners" asp-action="Edit" asp-route-encodedName="@item.EncodedName" class="btn"> <i class="material-icons">edit</i></a>
                                        <a asp-controller="HomeBanners" asp-action="Delete" asp-route-encodedName="@item.EncodedName" class="btn"> <i class="material-icons">delete</i></a>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-action">
                    <ul class="pagination">
                        <li class="@(Model.CurrentPage == 1 ? "disabled" : "waves-effect")">
                            <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="purple-text" style="@(Model.CurrentPage == 1 ? "display: none;" : "")">
                                <i class="material-icons">chevron_left</i>
                            </a>
                        </li>
                        @{
                            for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="@(Model.CurrentPage == i ? "active purple lighten-1" : "waves-effect")">
                                    <a asp-action="Index" asp-route-page="@i" class="@(Model.CurrentPage == i ? "white-text" : "purple-text")">
                                        @i
                                    </a>
                                </li>
                            }
                        }
                        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : "waves-effect")">
                            <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="purple-text" style="@(Model.CurrentPage == Model.TotalPages ? "display: none;" : "")">
                                <i class="material-icons">chevron_right</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>