@using SmellIt.Application.Helpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SmellIt.Application.ViewModels.Admin.ProductCategoriesViewModel
@{
    var prefixGenerator = (ViewBag.PrefixGenerator as IProductCategoryPrefixGenerator)!;
    ViewData["Title"] =WebsiteTexts.GetValue("ProductCategories");
    var requestCulture = Context.Request.HttpContext.Features.Get<IRequestCultureFeature>()!;
    var currentCulture = requestCulture.RequestCulture.Culture.ToString();
}
<div class="card-content">
    <div class="card-title">
        @WebsiteTexts.GetValue("ProductCategories")

        @if (User.IsInRole("Admin"))
        {
            <a class="btn right" href="@Url.Action("Create")"> <i class="material-icons">add</i></a>
        }
    </div>

    <table class="striped">
        <thead>
            <tr>
                <th>@WebsiteTexts.GetValue("Name")</th>
                <th>@WebsiteTexts.GetValue("Description")</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 0;
            }
            @foreach (var item in Model.Items!)
            {
                var description = "";
                if (currentCulture == "pl-PL" && item.DescriptionPl != null)
                    description = item.DescriptionPl.Length > 80 ? item.DescriptionPl.Substring(0, 80) + "..." : item.DescriptionPl;
                else if (currentCulture == "en-GB" && item.DescriptionEn != null)
                    description = item.DescriptionEn.Length > 80 ? item.DescriptionEn.Substring(0, 80) + "..." : item.DescriptionEn;
                <tr>
                    <td>
                        @prefixGenerator.GeneratePrefix(item)
                        @(currentCulture == "pl-PL" ? item.NamePl : item.NameEn)
                    </td>
                    <td>@description</td>
                    <td class="right">
                        <a href="#modalDescriptionPL_@index" class="btn modal-trigger"><i class="material-icons">more</i></a>
                        <div id="modalDescriptionPL_@index" class="modal">
                            <div class="modal-content">
                                <h4>@item.NamePl (@item.NameEn)</h4>
                                <h6>
                                    @if (item.ParentCategory != null)
                                    {
                                        @WebsiteTexts.GetValue("ParentCategory")
                                        @(currentCulture == "pl-PL" ? ": " + item.ParentCategory.NamePl : ": " + item.ParentCategory.NameEn)
                                    }
                                </h6>
                                <h5>@WebsiteTexts.GetValue("Description") (PL)</h5>
                                <p>@item.DescriptionPl</p>
                                <h5>@WebsiteTexts.GetValue("Description") (EN)</h5>
                                <p>@item.DescriptionEn</p>
                            </div>
                            <div class="modal-footer">
                                <a href="#!" class="modal-close btn">@WebsiteTexts.GetValue("Close")</a>
                            </div>
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="ProductCategories" asp-action="Edit" asp-route-encodedName="@item.EncodedName" class="btn"> <i class="material-icons">edit</i></a>
                            <a asp-controller="ProductCategories" asp-action="Delete" asp-route-encodedName="@item.EncodedName" class="btn"> <i class="material-icons">delete</i></a>
                        }
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>
<partial name="PartialViews/_Pagination" />