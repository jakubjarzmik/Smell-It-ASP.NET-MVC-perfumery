@using SmellIt.Domain.Entities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SmellIt.Application.SmellIt.Languages
@model SmellIt.Application.SmellIt.PrivacyPolicies.Commands.CreatePrivacyPolicy.CreatePrivacyPolicyCommand
@{
    ViewData["Title"] = language.GetValue("AddNewPrivacyPolicy");
}
<script src="~/lib/tinymce/tinymce.js"></script>
<script>
    tinymce.init({
        selector: 'textarea#privacy-policy',
        skin: "oxide-dark",
        plugins: 'a11ychecker advcode advlist advtable anchor autocorrect autosave editimage image link linkchecker lists media mediaembed pageembed powerpaste searchreplace table template tinymcespellchecker typography visualblocks wordcount',
        toolbar: 'undo redo | styles | bold italic underline strikethrough | align | table link image media pageembed | bullist numlist outdent indent | spellcheckdialog a11ycheck typography code',
        lists_indent_on_tab: false
    });
</script>
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card grey darken-3 white-text">
                <div class="card-content">
                    <div class="row">
                        <div class="card-title col s12">
                            <a class="btn left" asp-controller="PrivacyPolicies" asp-action="Index"> <i class="material-icons">arrow_back_ios_new</i></a>
                            <p class="right">@language.GetValue("AddNewPrivacyPolicy")</p>
                        </div>
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="helper-text"></div>
                            <div class="input-field col s12">
                                <input type="text" list="languages" asp-for="LanguageCode"/>
                                <datalist id="languages">
                                    @foreach (var language in ViewData["Languages"] as IEnumerable<LanguageDto>)
                                    {
                                        <option value="@language.Code">@language.Name</option>
                                    }
                                </datalist>
                            </div>
                            <div class="input-field col s12">
                                <textarea id="privacy-policy" class="materialize-textarea" asp-for="Text"></textarea>
                                <span asp-validation-for="Text" class="helper-text"></span>
                            </div>
                            <input type="submit" value="@language.GetValue("Save")" class="btn right" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}