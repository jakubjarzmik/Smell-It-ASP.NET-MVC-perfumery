@model IEnumerable<SmellIt.Application.Features.PrivacyPolicies.PrivacyPolicyDto>
@{
    ViewData["Title"] = language.GetValue("PrivacyPolicies");
}
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card grey darken-3 white-text">
                <div class="card-content">
                    <div class="card-title">
                        @language.GetValue("PrivacyPolicies")
                        <a class="btn right" href="@Url.Action("Create")"> <i class="material-icons">add</i></a>
                    </div>

                    <table class="striped">
                        <thead>
                            <tr>
                                <th>@language.GetValue("Text")</th>
                                <th>@language.GetValue("Language")</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(item.Text.Length > 80 ? item.Text.Substring(0,80) + "..." : item.Text)</td>
                                    <td>@item.LanguageCode</td>
                                    <td class="right">
                                        <a href="#modalDescriptionPL_@index" class="btn modal-trigger"><i class="material-icons">more</i></a>
                                        <div id="modalDescriptionPL_@index" class="modal">
                                            <div class="modal-content">
                                                <h5>@language.GetValue("Text")</h5>
                                                <p>@Html.Raw(item.Text)</p>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="#!" class="modal-close btn">@language.GetValue("Close")</a>
                                            </div>
                                        </div>
                                        <a asp-controller="PrivacyPolicies" asp-action="Edit" asp-route-encodedName="@item.EncodedName" class="btn"> <i class="material-icons">edit</i></a>
                                        <a asp-controller="PrivacyPolicies" asp-action="Delete" asp-route-encodedName="@item.EncodedName" class="btn"> <i class="material-icons">delete</i></a>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>