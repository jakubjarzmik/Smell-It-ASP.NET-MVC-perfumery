@using SmellIt.Application.Helpers
@model ProductsViewModel
@{
    ViewData["Title"] = language.GetValue("Products");
    var requestCulture = Context.Request.HttpContext.Features.Get<IRequestCultureFeature>()!;
    var currentCulture = requestCulture.RequestCulture.Culture.ToString();
}
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card grey darken-3 white-text">
                <div class="card-content">
                    <div class="card-title">
                        @language.GetValue("Products")
                        <a class="btn right" href="@Url.Action("Create")"> <i class="material-icons">add</i></a>
                    </div>

                    <table class="striped">
                        <thead>
                            <tr>
                                <th>@language.GetValue("Brand")</th>
                                <th>@language.GetValue("Name")</th>
                                <th>@language.GetValue("Price")</th>
                                <th>@language.GetValue("Description")</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 0;
                            }
                            @foreach (var item in Model.Items!)
                            {
                                var description = "";
                                if (currentCulture == "pl-PL" && item.DescriptionPl != null)
                                    description = item.DescriptionPl.Length > 50 ? item.DescriptionPl.Substring(0, 50) + "..." : item.DescriptionPl;
                                else if (currentCulture == "en-GB" && item.DescriptionEn != null)
                                    description = item.DescriptionEn.Length > 50 ? item.DescriptionEn.Substring(0, 50) + "..." : item.DescriptionEn;
                                <tr>
                                    <td>
                                        @item.Brand?.Name
                                    </td>
                                    <td>
                                        @(currentCulture == "pl-PL" ? item.NamePl : item.NameEn)
                                    </td>
                                    <td>@Html.Raw(item.PromotionalPrice == null ? item.Price : "<del>"+item.Price +" zł</del> " + item.PromotionalPrice ) zł</td>
                                    <td>@description</td>
                                    <td class="right">
                                        <a href="#modalDescriptionPL_@index" class="btn modal-trigger"><i class="material-icons">more</i></a>
                                        <div id="modalDescriptionPL_@index" class="modal">
                                            <div class="modal-content">
                                                <h4>@item.Brand?.Name - @(currentCulture == "pl-PL" ? item.NamePl : @item.NameEn)</h4>
                                                <p>
                                                    @(currentCulture == "pl-PL" ? item.ProductCategory?.NamePl : item.ProductCategory?.NameEn)
                                                    @((currentCulture == "pl-PL" ? item.Gender?.NamePl : item.Gender?.NameEn)?.ToLower())
                                                    @((currentCulture == "pl-PL" ? item.FragranceCategory?.NamePl : item.FragranceCategory?.NameEn)?.ToLower())
                                                </p>
                                                <p>
                                                    @language.GetValue("Price"): @item.Price zł
                                                </p>
                                                @if (item.PromotionalPrice != null)
                                                {
                                                    <p>
                                                        @language.GetValue("PromotionalPrice"): @item.PromotionalPrice zł
                                                    </p>
                                                }
                                                @if (item.Capacity != null)
                                                {
                                                    <p>
                                                        @language.GetValue("Capacity"): @item.Capacity ml
                                                    </p>
                                                }
                                                <h5>@language.GetValue("Description") (PL)</h5>
                                                <p>@item.DescriptionPl</p>
                                                <h5>@language.GetValue("Description") (EN)</h5>
                                                <p>@item.DescriptionEn</p>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="#!" class="modal-close btn">@language.GetValue("Close")</a>
                                            </div>
                                        </div>
                                        <a asp-controller="Products" asp-action="Edit" asp-route-encodedName="@item.EncodedName" class="btn"> <i class="material-icons">edit</i></a>
                                        <a asp-controller="Products" asp-action="Delete" asp-route-encodedName="@item.EncodedName" class="btn"> <i class="material-icons">delete</i></a>
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-action">
                    <ul class="pagination">
                        <li class="@(Model.CurrentPage == 1 ? "disabled" : "waves-effect")">
                            <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="purple-text" style="@(Model.CurrentPage == 1 ? "display: none;" : "")">
                                <i class="material-icons">chevron_left</i>
                            </a>
                        </li>
                        @{
                            for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="@(Model.CurrentPage == i ? "active purple lighten-1" : "waves-effect")">
                                    <a asp-action="Index" asp-route-page="@i" class="@(Model.CurrentPage == i ? "white-text" : "purple-text")">
                                        @i
                                    </a>
                                </li>
                            }
                        }
                        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : "waves-effect")">
                            <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="purple-text" style="@(Model.CurrentPage == Model.TotalPages ? "display: none;" : "")">
                                <i class="material-icons">chevron_right</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>