                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content" style="height: 100%;">
        <h4>@language.GetKey("AddNewProduct")</h4>
        <form>

            <div class="input-field">
                <label for="title">@language.GetKey("Name")</label>
                <input type="text" id="title" />
            </div>
            <div class="input-field">
                @*<select id="category" class="select2">
                    <option value="" disabled="disabled" selected>@language.GetKey("SelectCategory")</option>
                    <option value="1">@language.GetKey("Devices")</option>
                    <option value="2">@language.GetKey("Fragrance")</option>
                    <option value="3">@language.GetKey("HomeFragrance")</option>
                    <option value="4">@language.GetKey("Others")</option>
                </select>*@
                <input type="text" list="categories" />
                <datalist id="categories">
                    <option value="@language.GetKey("Devices")"/>
                    <option value="@language.GetKey("Fragrance")"/>
                    <option value="@language.GetKey("HomeFragrance")"/>
                    <option value="@language.GetKey("Others")"/>
                </datalist>
            </div>
            <div class="input-field">
                <label for="category">@language.GetKey("Price") (zł)</label>
                <input type="number" id="price" />
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>@language.GetKey("Files")</span>
                    <input type="file" multiple accept="image/png, image/jpeg">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" placeholder="@language.GetKey("UploadPhotos")">
                </div>
            </div>
            <div class="input-field">
                <textarea id="description" class="materialize-textarea"></textarea>
                <label for="description">@language.GetKey("Description")</label>
            </div>
        </form>
    </div>
    <div class="modal-footer grey darken-2">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">@language.GetKey("Add")</a>
    </div>
</div>