<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>@language.GetKey("AddNewCategory")</h4>
        <form>
            <div class="input-field">
                <label for="title">@language.GetKey("Title")</label>
                <input type="text" id="title" />
            </div>
            <div class="input-field">
                <select id="category">
                    <option value="" disabled="disabled" selected>@language.GetKey("SelectCategory")</option>
                    <option value="1">@language.GetKey("Devices")</option>
                    <option value="2">@language.GetKey("Fragrance")</option>
                    <option value="3">@language.GetKey("HomeFragrance")</option>
                    <option value="4">@language.GetKey("Others")</option>
                </select>
            </div>
        </form>
    </div>
    <div class="modal-footer grey darken-2">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">@language.GetKey("Add")</a>
    </div>
</div>