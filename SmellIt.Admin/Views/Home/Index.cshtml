@inject LanguageService language
@{
    ViewData["Title"] = language.GetKey("Dashboard");
}
<!-- Stats Section : START -->
<section class="section center">
    <div class="row">
        <div class="col s12 m6 l3">
            <div class="card-panel grey darken-3 white-text center">
                <i class="material-icons medium">insert_emoticon</i>
                <h5>@language.GetKey("MonthlyVisitors")</h5>
                <h3>1874</h3>
            </div>
        </div>
        <div class="col s12 m6 l3">
            <div class="card-panel center black-text">
                <i class="material-icons medium">mode_edit</i>
                <h5>@language.GetKey("MonthlyPurchases")</h5>
                <h3>105</h3>
            </div>
        </div>
        <div class="col s12 m6 l3">
            <div class="card-panel grey darken-3 white-text center">
                <i class="material-icons medium">mode_comment</i>
                <h5>@language.GetKey("MonthlyEarnings")</h5>
                <h3>12468 zł</h3>
            </div>
        </div>
        <div class="col s12 m6 l3">
