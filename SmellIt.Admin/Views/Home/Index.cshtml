                    <span class="card-title">@language.GetKey("RecentOrders")</span>
                    <table class="striped">
                        <thead>
                            <tr>
                                <th>@language.GetKey("Time")</th>
                                <th>@language.GetKey("User")</th>
                                <th>@language.GetKey("Value")</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@DateTime.Now.AddMinutes(-2)</td>
                                <td>Catie Smith</td>
