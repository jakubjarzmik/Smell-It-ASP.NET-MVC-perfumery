			<div class="col-md-12">
				<div class="title text-center">
					<h2>@Language.GetKey("ProductCategories")</h2>
				</div>
			</div>
			<div class="col-md-6">
				<div class="category-box">
					<a href="#!">
						<img src="~/images/shop/category/category-1.jpg" alt="" />
						<div class="content">
							<h3>@Language.GetKey("WomensPerfume")</h3>
							<p>@Language.GetKey("WomensPerfumeDesc")</p>
						</div>
					</a>
				</div>
				<div class="category-box">
					<a href="#!">
						<img src="~/images/shop/category/category-2.jpg" alt="" />
						<div class="content">
							<h3 style="color: white">@Language.GetKey("MensAftershave")</h3>
							<p>@Language.GetKey("MensAftershaveDesc")</p>
						</div>
