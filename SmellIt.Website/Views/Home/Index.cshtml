@{
    ViewData["Title"] = "Home Page";
}
@inject LanguageService Language

<div class="hero-slider">
	<div class="slider-item th-fullpage hero-area" style="background-image: url(/images/slider/banner.jpg);">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 text-center">
					<p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">@Language.GetKey("Products")</p>
                    <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">@Language.GetKey("BannerText1")</h1>
					<a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="#">@Language.GetKey("SeeNow")</a>
				</div>
			</div>
		</div>
	</div>
	<div class="slider-item th-fullpage hero-area" style="background-image: url(/images/slider/banner1.jpg);">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 text-center">
					<p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">@Language.GetKey("Products")</p>
                    <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">Dior - SAVUAGE<br/>
						@Language.GetKey("BannerText2")
