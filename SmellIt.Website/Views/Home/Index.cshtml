					<a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="#">@Language.GetKey("SeeNow")</a>
				</div>
			</div>
		</div>
	</div>
	<div class="slider-item th-fullpage hero-area" style="background-image: url(images/slider/banner4.png);">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 text-right">
					<p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">@Language.GetKey("Products")</p>
					<h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">Armani Sì<br>@Language.GetKey("BannerText3")</h1>
					<a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="#">@Language.GetKey("SeeNow")</a>
				</div>
			</div>
		</div>
	</div>
	<div class="slider-item th-fullpage hero-area" style="background-image: url(images/slider/banner3.jpg);">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 text-left">
					<p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">@Language.GetKey("Products")</p>
					<h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">@Language.GetKey("BannerText4")</h1>
					<a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="#">@Language.GetKey("SeeNow")</a>
				</div>
			</div>
		</div>
	</div>
</div>

<section class="product-category section">
